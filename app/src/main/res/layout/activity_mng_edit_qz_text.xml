    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtLyt8"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/txtLyt7"
        app:layout_constraintTop_toBottomOf="@+id/txtLyt6">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtCrct4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtLyt9"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLyt7">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtQst5"
            android:layout_width="match_parent"
